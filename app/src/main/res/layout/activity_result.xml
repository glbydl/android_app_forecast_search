<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.08"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:text="@string/button_more_details"
                    android:background="@drawable/mybutton"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/button_more_details" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:text="@string/button_view_map"
                    android:background="@drawable/mybutton"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/button_view_maps" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fb_icon"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:id="@+id/image_fb_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center">
                
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/clear"
                    android:id="@+id/image_result_weather_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="Clear in Los Angeles, CA"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:id="@+id/summary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="53째"
                    android:textSize="50sp"
                    android:textColor="@color/black"
                    android:id="@+id/temperature" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="L48째 | H71째"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:id="@+id/high_low" />

            </LinearLayout>

            <TableLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Precipitation"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:padding="3dip" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="None"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:id="@+id/table_result_precipitation"
                        android:gravity="right"
                        android:padding="3dip" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Chance of Rain"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:padding="3dip" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0%"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:id="@+id/table_result_chance_of_rain"
                        android:gravity="right"
                        android:padding="3dip" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Wind Speed"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:padding="3dip" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1.23mph"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:id="@+id/table_result_wind_speed"
                        android:gravity="right"
                        android:padding="3dip" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Dew Point"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:padding="3dip" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="31째F"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:id="@+id/table_result_dew_point"
                        android:gravity="right"
                        android:padding="3dip" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Humidity"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:padding="3dip" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="25%"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:id="@+id/table_result_humidity"
                        android:gravity="right"
                        android:padding="3dip" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Visibility"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:padding="3dip" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="16.09km"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:id="@+id/table_result_visibility"
                        android:gravity="right"
                        android:padding="3dip" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Sunrise"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:padding="3dip" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="6:23AM"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:id="@+id/table_result_sunrise"
                        android:gravity="right"
                        android:padding="3dip" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Sunset"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:padding="3dip" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="4:53PM"
                        android:textSize="20sp"
                        android:textColor="@color/gray"
                        android:id="@+id/table_result_sunset"
                        android:gravity="right"
                        android:padding="3dip" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>