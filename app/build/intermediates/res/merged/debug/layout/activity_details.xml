<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/mainscrollview"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="More Details for Los Angeles, CA"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="top|center"
            android:layout_marginTop="30dp"
            android:id="@+id/more_details_title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="top|center">

            <Button
                android:id="@+id/button_next_24_hours"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/superGray"
                android:text="NEXT 24 HOURS"
                android:textColor="@color/black"
                android:onClick="selectFrag"/>

            <Button
                android:id="@+id/button_next_7_days"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/superGray"
                android:text="NEXT 7 DAYS"
                android:textColor="@color/black"
                android:onClick="selectFrag"/>

        </LinearLayout>

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="android.app.ListFragment"
            android:layout_gravity="top|center"
            android:layout_marginTop="20dp"
            android:id="@+id/fragment_place" />

    </LinearLayout>

</ScrollView><!-- From: file:/F:/csci571/hw9_android_app/ForecastSearch/app/src/main/res/layout/activity_details.xml -->